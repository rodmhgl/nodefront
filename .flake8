[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info
ignore = 
    # line too long
    E501,
    # whitespace before ':'
    E203,
    # line break before binary operator
    W503,
per-file-ignores =
    __init__.py:F401
